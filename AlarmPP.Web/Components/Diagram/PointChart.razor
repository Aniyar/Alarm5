@*@if (Points != null)
{*@
    <svg style="@Style" width="200" height="300" viewBox="@ViewBox
         " preserveAspectRatio="none">
        <g style="transform:rotate(@NominalRailRotate) translate(@NominalRailTranslate);">
            <polyline points="@NominalRail" stroke="black" stroke-width="1" fill="none" />
        </g>

        <text x="-40" y="70">@DownHill</text>
        <text x="-25" y="-12">@Tilt</text>
        @*@for (int i = 0; i < Points.Length - 1; i = i + 2)
        {
            if (!Double.IsNaN(Points[i]) && !Double.IsNaN(Points[i + 1]))
            {
                <circle cx="@Points[i].ToString().Replace(",", ".")" cy="@Points[i + 1].ToString().Replace(",", ".")" r="0.1" stroke="blue" stroke-width="1" fill="blue" />
            }
        }*@
    </svg>
@*}*@
